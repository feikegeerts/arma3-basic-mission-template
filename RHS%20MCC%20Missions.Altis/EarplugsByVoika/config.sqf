cm_Earplugs_FUNc = {

	if (earplugsout) then {
		[] call cmManMuteMessage;
		[] call cmManMuteSound;
		earplugsout=false;
	} else {
		[] call cmManReturnSoundMsg;
		[] call cmManReturnSound;
		earplugsout=true;
	};
};

